<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:gravity="center_vertical"
                >
                <com.github.customview.MyLinearLayout
                    android:id="@+id/ll_my"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:my_ll_solid="@color/white"
                    app:my_ll_corner_radius="3dp"
                    android:layout_margin="5dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    >
                    <com.github.customview.MyEditText
                        android:id="@+id/et_code_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入搜索内容"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:textSize="13sp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/gray_d7"
                        />
                </com.github.customview.MyLinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="2px"
                    >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:text="名称"
                            android:textColor="@color/gray_66"
                            android:textSize="15sp"
                            />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="外/内"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="外盘:内盘"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:text="价格"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:text="涨幅"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:text="涨跌"
                        android:gravity="right"
                        />
                </LinearLayout>
                <com.library.base.view.MyRecyclerView
                    android:id="@+id/rv_all_gp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2px"
                    >
                </com.library.base.view.MyRecyclerView>
            </LinearLayout>
    </com.library.base.ProgressLayout>
</LinearLayout>